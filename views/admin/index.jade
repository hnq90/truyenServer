extends layout

block content
  div(id="index-page")
    a(href="/admin?type=manga") List Manga
    - if (stories.length > 0)
      form(action="updateStories", method="POST", enctype="multipart/form-data")
        input(type="submit", name="submit", value="Update")
        table
          tr
            td 
              span(class="row-title") STT
            td
              span(class="row-title") Tên Truyện
            td
              span Tác Giả
          - each story,i in stories
            tr
              td #{i}
              td(class="input-rows")
                input(name="story-title-#{story._id}", id="story-title-#{story._id}", class="story-titles editables", type="text", value="#{story.title}")
              td(class="input-rows")
                input(name="story-author-#{story._id}", id="story-author-#{story._id}", class="story-authors editables", type="text", value="#{story.author}") 