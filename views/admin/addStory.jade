block content
  div(id="addStory-page")
    a(href="/admin?type=story") List Truyện Chữ
    br
    br
    form(action="addStory", method="POST", enctype="multipart/form-data")
      span Tên Truyện:
      br
      input(name="story-title", id="story-title", class="story-titles editables", type="text", value="")
      button(type="button", onClick="checkStory()") Check
      div(id="check-results")
      span Tác Giả:
      br
      input(name="story-author", id="story-author", class="story-author editables", type="text", value="")
      br
      span Thể Loại
      br
      select(name="story-cate", id="story-cate")
        option(value="0") Ngôn Tình
      br
      span Cover Link
      br
      input(name="story-cover", id="story-cover", class="story-cover editables", type="text", value="")
      br
      span Giới Thiệu:
      br
      textarea(name="story-shortDes", id="story-shortDes", class="story-shortDes editables", value="")
      br
      input(name="chapter-count", id="chapter-count", type="hidden", value="")
      div(id="chapters-wapper")
      button(type="button", onClick="addMoreChapter()") Thêm Chapter
      br
      br
      input(type="submit", name="submit", value="Save")
